# Environment Variables for Modern DeFi Dashboard
# Copy this file to .env.local and fill in your API keys

# WalletConnect Project ID (Required)
# Get from: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Alchemy API Key (Optional - for better RPC performance)
# Get from: https://alchemy.com
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key

# Etherscan API Key (Optional - for transaction history)
# Get from: https://etherscan.io/apis
NEXT_PUBLIC_ETHERSCAN_API_KEY=your_etherscan_api_key

# Polygon API Key (Optional - for Polygon network data)
# Get from: https://polygonscan.com/apis
NEXT_PUBLIC_POLYGONSCAN_API_KEY=your_polygonscan_api_key

# CoinGecko API Key (Optional - for price data)
# Get from: https://coingecko.com/en/api
NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_api_key

# 1inch API Key (Optional - for DEX aggregation)
# Get from: https://1inch.io/api/
NEXT_PUBLIC_1INCH_API_KEY=your_1inch_api_key

# Development settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
