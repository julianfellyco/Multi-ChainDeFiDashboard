# Modern DeFi Dashboard Environment Variables
# Copy this file to .env.local and fill in your API keys

# WalletConnect Project ID (Required)
# Get from: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Alchemy API Keys (Optional but recommended for better performance)
# Get from: https://alchemy.com
NEXT_PUBLIC_ALCHEMY_API_KEY_ETHEREUM=your_alchemy_ethereum_key
NEXT_PUBLIC_ALCHEMY_API_KEY_POLYGON=your_alchemy_polygon_key
NEXT_PUBLIC_ALCHEMY_API_KEY_ARBITRUM=your_alchemy_arbitrum_key
NEXT_PUBLIC_ALCHEMY_API_KEY_BASE=your_alchemy_base_key

# Etherscan API Keys (Optional - for transaction history)
# Get from: https://etherscan.io/apis
NEXT_PUBLIC_ETHERSCAN_API_KEY=your_etherscan_api_key
NEXT_PUBLIC_POLYGONSCAN_API_KEY=your_polygonscan_api_key
NEXT_PUBLIC_ARBISCAN_API_KEY=your_arbiscan_api_key
NEXT_PUBLIC_BASESCAN_API_KEY=your_basescan_api_key

# CoinGecko API (Optional - for price data)
# Get from: https://coingecko.com/en/api
NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_api_key

# 1inch API (Optional - for DEX aggregation)
# Get from: https://1inch.dev
NEXT_PUBLIC_1INCH_API_KEY=your_1inch_api_key

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# Debugging
NEXT_PUBLIC_DEBUG=false

# App Configuration
NEXT_PUBLIC_APP_NAME="Modern DeFi Dashboard"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_TESTNETS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
